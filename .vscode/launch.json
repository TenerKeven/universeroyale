    "version": "0.2.0",
    "configurations": [
        {
            "name": "Godot Run Server",
            "type": "godot",
            "request": "launch",
            "project": "${workspaceFolder}",
            "debug_collisions": false,
            "debug_paths": false,
            "debug_navigation": false,
            "additional_options": "--server"
        },
        {
            "name": "Godot Run Client",
            "type": "godot",
            "request": "launch",
            "project": "${workspaceFolder}",
            "debug_collisions": false,
            "debug_paths": false,
            "debug_navigation": false,
            "additional_options": "--client"
        },
    ],
    "compounds": [
        {
            "name": "Run Server And Client",
            "configurations": ["Godot Run Server", "Godot Run Client"]
        }
    ]
}